{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "test"
  ],
  "composite": true,
  "noEmit": false,
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
